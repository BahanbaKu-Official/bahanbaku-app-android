<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context=".presentation.directpayment.DirectPaymentActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/pure_white"
        android:background="@color/placeholder_gray"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/tv_label_payment_amount"
                android:layout_width="320dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/placeholder_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_img_copy_amount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@color/placeholder_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                 />

            <View
                android:id="@+id/tv_payment_amount"
                android:layout_width="300dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="@id/tv_label_payment_amount"
                app:layout_constraintEnd_toStartOf="@+id/btn_img_copy_amount"
                app:layout_constraintTop_toBottomOf="@id/tv_label_payment_amount"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="18sp"
                android:background="@color/placeholder_gray"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/pure_white"
        app:cardCornerRadius="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/tv_label_payment_method"
                android:layout_width="350dp"
                android:layout_height="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/placeholder_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_img_payment_method"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@color/placeholder_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                 />

            <ImageView
                android:id="@+id/img_logo_payment_method"
                android:layout_width="18.4968dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/tv_label_payment_method"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_label_payment_method"
                android:layout_marginBottom="16dp"
                android:src="@color/placeholder_gray"/>

            <View
                android:layout_width="280dp"
                android:layout_height="25dp"
                app:layout_constraintStart_toEndOf="@id/img_logo_payment_method"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/img_logo_payment_method"
                app:layout_constraintBottom_toBottomOf="@id/img_logo_payment_method"
                app:layout_constraintEnd_toStartOf="@id/btn_img_payment_method"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="18sp"
                android:background="@color/placeholder_gray"
                />

            <View
                android:id="@+id/tv_label_account_number"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/placeholder_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_logo_payment_method" />

            <View
                android:id="@+id/tv_account_number"
                android:layout_width="100dp"
                android:layout_height="18dp"
                app:layout_constraintStart_toStartOf="@id/tv_label_account_number"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_account_number"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/ubuntu_bold"
                android:textSize="18sp"
                android:background="@color/placeholder_gray"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btn_upload_payment_proof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/placeholder_gray"
        android:layout_marginTop="32dp"/>
</LinearLayout>