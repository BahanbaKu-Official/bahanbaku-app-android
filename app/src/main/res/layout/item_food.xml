<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_food"
    app:strokeWidth="0dp"
    app:strokeColor="#E0E0E0"
    style="@style/Widget.Material3.CardView.Elevated"
    android:foreground="?android:attr/selectableItemBackground"
    android:backgroundTint="@color/pure_white"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_recipe"
                android:layout_width="124dp"
                android:layout_height="124dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:text="@string/placeholder_food_name"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/card_img"
            app:layout_constraintTop_toTopOf="@+id/card_img" />

        <ImageView
            android:id="@+id/img_icon_desc_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fastfood"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_recipe"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe" />

        <TextView
            android:id="@+id/tv_probability"
            style="@style/Text.Body.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/desc_food_recipe_totality"
            app:layout_constraintBottom_toBottomOf="@+id/img_icon_desc_food"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_icon_desc_food"
            app:layout_constraintTop_toTopOf="@+id/img_icon_desc_food" />

        <Button
            android:id="@+id/btn_watch_recipe_detail"
            style="@style/Widget.Material3.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/black"
            android:text="@string/watch_recipe"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/tv_probability"
            app:layout_constraintStart_toStartOf="@+id/img_icon_desc_food"
            app:layout_constraintTop_toBottomOf="@+id/tv_probability" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:dividerColor="@color/placeholder_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_watch_recipe_detail" />

        <TextView
            android:id="@+id/desc_snapfood"
            style="@style/TextAppearance.Material3.BodySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/desc_snapshot"
            app:layout_constraintEnd_toStartOf="@+id/progressBarCircular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

        <ProgressBar
            android:id="@+id/progressBarCircular"
            style="@style/CircularPrograssBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:progress="50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/materialDivider" />

        <TextView
            android:id="@+id/tv_percentage_accuracy"
            style="@style/TextAppearance.Material3.TitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_percentage"
            android:textColor="@color/pastel_green"
            app:layout_constraintBottom_toBottomOf="@+id/progressBarCircular"
            app:layout_constraintEnd_toEndOf="@+id/progressBarCircular"
            app:layout_constraintStart_toStartOf="@+id/progressBarCircular"
            app:layout_constraintTop_toTopOf="@+id/progressBarCircular" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>