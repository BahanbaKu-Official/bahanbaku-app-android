<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dr_edittext_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:queryHint="Search a recipe"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/img_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="@string/search_for_recipes" />

        <ImageView
            android:id="@+id/img_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="@id/card_search"
            app:layout_constraintStart_toStartOf="@id/card_search"
            app:layout_constraintTop_toTopOf="@id/card_search" />

        <TextView
            style="@style/Text.Body.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:text="@string/search_for_recipes"
            app:layout_constraintBottom_toBottomOf="@id/img_search_icon"
            app:layout_constraintStart_toEndOf="@id/img_search_icon"
            app:layout_constraintTop_toTopOf="@id/img_search_icon" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:src="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/card_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_search" />

        <ImageView
            android:id="@+id/placeholder_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:src="@color/pure_white"
            app:layout_constraintTop_toBottomOf="@id/card_search" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_location"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/pastel_yellow"
            app:cardCornerRadius="990dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@+id/card_circle_category_stars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_banner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_location" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_stars"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/pastel_green"
            app:cardCornerRadius="990dp"
            app:layout_constraintBottom_toBottomOf="@id/card_circle_category_location"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@id/card_circle_category_rating"
            app:layout_constraintStart_toEndOf="@id/card_circle_category_location"
            app:layout_constraintTop_toTopOf="@id/card_circle_category_location">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_stars" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_rating"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/pastel_yellow_secondary"
            app:cardCornerRadius="990dp"
            app:layout_constraintBottom_toBottomOf="@id/card_circle_category_stars"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_circle_category_stars"
            app:layout_constraintTop_toTopOf="@id/card_circle_category_stars">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_ratings" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_indonesian_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/indonesian"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_location"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_location"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_location" />

        <TextView
            android:id="@+id/tv_recommended_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/recommended"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_stars"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_stars"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_stars" />

        <TextView
            android:id="@+id/tv_best_rated_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/best_rated"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_rating"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_rating"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_rating" />

        <TextView
            android:id="@+id/tv_home_greetings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/placeholder_greetings"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_indonesian_category" />

        <TextView
            android:id="@+id/tv_label_morning_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_home_greetings"
            android:text="@string/morning_recommendation"
            app:layout_constraintTop_toBottomOf="@id/tv_home_greetings"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/tv_home_greetings"
            android:text="@string/see_all"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toTopOf="@id/tv_label_morning_recommendation"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_morning_recommendation"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_morning_recommendation_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_label_morning_recommendation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:orientation="horizontal"
            tools:listitem="@layout/item_card_recipe_medium"
            />

        <TextView
            android:id="@+id/tv_label_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_home_greetings"
            android:text="@string/discover_more"
            app:layout_constraintTop_toBottomOf="@id/rv_morning_recommendation_recipe"
            android:layout_marginTop="32dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_others"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:orientation="vertical"
            app:spanCount="2"
            tools:listitem="@layout/item_card_recipe_large" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>