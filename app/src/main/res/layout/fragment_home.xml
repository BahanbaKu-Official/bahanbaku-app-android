<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/container_top_app_bar"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-24dp"
            android:backgroundTint="@color/pure_white"
            android:orientation="horizontal"
            app:cardCornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_search"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_search"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:queryHint="Search a recipe"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_icon_cart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="@string/search_for_recipes" />

        <ImageView
            android:id="@+id/img_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="@id/card_search"
            app:layout_constraintStart_toStartOf="@id/card_search"
            app:layout_constraintTop_toTopOf="@id/card_search"
            app:tint="@color/gray_text" />

        <TextView
            style="@style/Text.Body.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:text="@string/search_for_recipes"
            android:textColor="@color/gray_text"
            app:layout_constraintBottom_toBottomOf="@id/img_search_icon"
            app:layout_constraintStart_toEndOf="@id/img_search_icon"
            app:layout_constraintTop_toTopOf="@id/img_search_icon" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_icon_cart"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_shopping_cart"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/card_search"
            app:layout_constraintEnd_toStartOf="@id/btn_icon_notification"
            app:layout_constraintTop_toTopOf="@id/card_search" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_icon_notification"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/ic_notifications"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/card_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/card_search" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/placeholder_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="24dp"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/container_top_app_bar"
            >

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@color/pure_white"
                app:layout_constraintTop_toBottomOf="@id/container_top_app_bar" />

        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_location"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/pastel_yellow"
            app:cardCornerRadius="990dp"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@+id/card_circle_category_stars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placeholder_banner">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_location" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_stars"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/pastel_green"
            app:cardCornerRadius="990dp"
            app:layout_constraintBottom_toBottomOf="@id/card_circle_category_location"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@id/card_circle_category_rating"
            app:layout_constraintStart_toEndOf="@id/card_circle_category_location"
            app:layout_constraintTop_toTopOf="@id/card_circle_category_location">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_stars" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_circle_category_rating"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/pastel_yellow_secondary"
            app:cardCornerRadius="990dp"
            app:layout_constraintBottom_toBottomOf="@id/card_circle_category_stars"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_circle_category_stars"
            app:layout_constraintTop_toTopOf="@id/card_circle_category_stars">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/illus_ratings" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_indonesian_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/indonesian"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_location"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_location"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_location" />

        <TextView
            android:id="@+id/tv_recommended_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/recommended"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_stars"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_stars"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_stars" />

        <TextView
            android:id="@+id/tv_best_rated_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/best_rated"
            app:layout_constraintEnd_toEndOf="@id/card_circle_category_rating"
            app:layout_constraintStart_toStartOf="@id/card_circle_category_rating"
            app:layout_constraintTop_toBottomOf="@id/card_circle_category_rating" />

        <TextView
            android:id="@+id/tv_home_greetings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/placeholder_greetings"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_indonesian_category" />

        <TextView
            android:id="@+id/tv_label_morning_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/morning_recommendation"
            app:layout_constraintStart_toStartOf="@id/tv_home_greetings"
            app:layout_constraintTop_toBottomOf="@id/tv_home_greetings" />

        <TextView
            android:id="@+id/btn_tv_see_all_morning_recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/see_all"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_morning_recommendation"
            app:layout_constraintEnd_toEndOf="@id/tv_home_greetings"
            app:layout_constraintTop_toTopOf="@id/tv_label_morning_recommendation" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_morning_recommendation_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_morning_recommendation"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_card_recipe_medium_time"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_label_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/categories"
            app:layout_constraintStart_toStartOf="@id/tv_label_morning_recommendation"
            app:layout_constraintTop_toBottomOf="@id/rv_morning_recommendation_recipe" />

        <TextView
            android:id="@+id/btn_tv_see_all_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/see_all"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_categories"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_label_categories" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recipe_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label_categories"
            app:spanCount="3"
            tools:itemCount="6"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_card_category_small"
            tools:orientation="vertical" />

        <TextView
            android:id="@+id/tv_label_recommendation_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Western Foods"
            app:layout_constraintStart_toStartOf="@+id/tv_label_categories"
            app:layout_constraintTop_toBottomOf="@id/rv_recipe_categories" />

        <TextView
            android:id="@+id/btn_tv_see_all_recommendation_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/see_all"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_recommendation_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_label_recommendation_1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recipe_recommendation_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_recommendation_1"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_card_recipe_medium"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_label_recommendation_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Our Recommendations"
            app:layout_constraintStart_toStartOf="@+id/tv_label_recommendation_1"
            app:layout_constraintTop_toBottomOf="@id/rv_recipe_recommendation_1" />

        <TextView
            android:id="@+id/btn_tv_see_all_recommendation_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/see_all"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_recommendation_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_label_recommendation_2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recipe_recommendation_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_recommendation_2"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_card_recipe_medium"
            tools:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_label_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/discover_more"
            app:layout_constraintStart_toStartOf="@id/tv_home_greetings"
            app:layout_constraintTop_toBottomOf="@id/rv_recipe_recommendation_2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_more_recipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_others"
            app:spanCount="2"
            tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            tools:listitem="@layout/item_card_recipe_large"
            tools:orientation="vertical" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>