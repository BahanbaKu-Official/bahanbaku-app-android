<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@color/placeholder_gray"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/tv_name_profile"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:background="@color/placeholder_gray"
        app:layout_constraintBottom_toBottomOf="@id/img_profile"
        app:layout_constraintStart_toEndOf="@+id/img_profile"
        app:layout_constraintTop_toTopOf="@id/img_profile" />

    <View
        android:id="@+id/layout_preferences"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_height="180dp"
        android:background="@color/placeholder_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_profile" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/placeholder_gray"
        app:layout_constraintTop_toBottomOf="@id/layout_preferences" />
</androidx.constraintlayout.widget.ConstraintLayout>