<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="24dp"
    style="@style/Widget.Material3.CardView.Elevated"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#ECECEC">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/container_card_recipe_favorite_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/dr_container_rect_rounded_16_white"
            app:layout_constraintBottom_toBottomOf="@+id/img_card_recipe_favorite"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_card_recipe_favorite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,1:1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_title_recipe_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_card_recipe_favorite"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="8dp"
            android:text="@string/title_item_search"
            style="@style/Text.Title.Large"
            />

        <TextView
            android:id="@+id/tv_desc_item_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/desc_item_search"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_recipe_favorite" />


        <ImageView
            android:id="@+id/img_icon_star_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_outline_star_outline_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search" />

        <TextView
            android:id="@+id/tv_total_rating_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_raing_search"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_icon_star_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search" />

        <TextView
            android:id="@+id/textView"
            style="@style/Text.Body.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="4dp"
            android:text="@string/I"
            app:layout_constraintStart_toEndOf="@+id/tv_total_rating_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search" />

        <ImageView
            android:id="@+id/img_icon_alarm_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_outline_access_alarms_24"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search" />

        <TextView
            android:id="@+id/tv_total_time_cooking_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/minutes"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_icon_alarm_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_baseline_circle_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_icon_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_outline_favorite_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/red_100" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>