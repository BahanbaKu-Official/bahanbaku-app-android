<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.addressmaps.AddressMapsActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_address"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/placeholder_layout_detail"/>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tf_address_search"
        style="@style/TextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:hint="@string/enter_address_city_or_province"
        app:boxBackgroundColor="@color/pure_white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_search_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_address_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tf_address_search"
        app:layout_constraintStart_toStartOf="@id/tf_address_search"
        app:layout_constraintEnd_toEndOf="@id/tf_address_search"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_address_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:ellipsize="end"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_proceed_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/proceed"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_get_location_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_proceed_address"
        app:layout_constraintEnd_toEndOf="@id/btn_proceed_address"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_location_on_24"
        app:backgroundTint="@color/pure_white"/>
</androidx.constraintlayout.widget.ConstraintLayout>