<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_item_search"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/img_search_icon"
                android:layout_width="72dp"
                android:layout_height="83dp"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title_item_search"
            style="@style/Text.Title.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="@string/title_item_search"
            app:layout_constraintStart_toEndOf="@+id/cv_search"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc_item_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="@string/desc_item_search"
            app:layout_constraintStart_toEndOf="@+id/cv_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_item_search" />

        <TextView
            android:id="@+id/tv_total_item_search"
            style="@style/Text.Body.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="@string/total_item"
            app:layout_constraintStart_toEndOf="@+id/cv_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_item_search" />

        <ImageView
            android:id="@+id/img_icon_star_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_outline_star_outline_24"
            app:layout_constraintStart_toEndOf="@+id/cv_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_item_search" />

        <TextView
            android:id="@+id/tv_total_rating_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_raing_search"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_icon_star_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_item_search" />

        <TextView
            android:id="@+id/textView"
            style="@style/Text.Body.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/I"
            app:layout_constraintStart_toEndOf="@+id/tv_total_rating_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_item_search" />

        <ImageView
            android:id="@+id/img_icon_alarm_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_outline_access_alarms_24"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_item_search" />

        <TextView
            android:id="@+id/tv_total_time_cooking_search"
            style="@style/Text.Body.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/minutes"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_icon_alarm_search"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_item_search" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>