<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.directpaymentproof.DirectPaymentProofActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_page_payment_proof"
            style="@style/Text.Headline.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/payment_proof"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_page_payment_proof"
            style="@style/Text.Body.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/upload_here"
            app:layout_constraintTop_toBottomOf="@id/title_page_payment_proof" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_img_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle_page_payment_proof"
            app:strokeColor="@color/placeholder_gray">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_payment_proof"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@color/placeholder_gray"
                    app:layout_constraintDimensionRatio="H,1:1.2"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv_upload_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/upload_picture"
            android:textSize="24sp"
            app:drawableStartCompat="@drawable/ic_baseline_photo_library_24"
            app:layout_constraintBottom_toBottomOf="@id/card_img_proof"
            app:layout_constraintEnd_toEndOf="@id/card_img_proof"
            app:layout_constraintStart_toStartOf="@id/card_img_proof"
            app:layout_constraintTop_toTopOf="@id/card_img_proof" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_disclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/pastel_red"
            style="@style/Widget.Material3.CardView.Filled"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="@id/card_img_proof"
            app:layout_constraintStart_toStartOf="@id/card_img_proof"
            app:layout_constraintTop_toBottomOf="@id/card_img_proof">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_icon_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_baseline_warning_24"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/disclaimer_payment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/img_icon_warning"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_upload_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/upload"
            app:layout_constraintTop_toBottomOf="@id/card_disclaimer" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>